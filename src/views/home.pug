doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body
        header
            h1 Noom
        main
            div#welcome
                form(style="justify-content: center; align-items: center;")
                    input(placeholder="room name", required, type="text")
                    button Enter room
            div#call
                div#myStream(style="justify-content: center; align-items: center;")
                    div(style="display: flex;")
                        video#myFace(autoplay, playsinline, style="margin-right: 10px; width: 600; height: 600;")
                        video#peerFace(autoplay, playsinline, style="width: 600; height: 600;")
                    button#mute(style="margin-right: 10px;") Mute
                    button#camera Turn Camera Off
                    select#cameras
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js")